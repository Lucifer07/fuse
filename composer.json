{
  "name": "lucifer07/fuse",
  "description": "Circuit breaker for Laravel queue jobs. PHP 8.1 compatible.",
  "keywords": ["laravel", "circuit-breaker", "queue", "jobs", "resilience"],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Maulana Jaelani",
      "email": "jaelanimaulana7@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/cache": "^10.0",
    "illuminate/contracts": "^10.0",
    "illuminate/support": "^10.0",
    "illuminate/queue": "^10.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.0",
    "orchestra/testbench": "^8.0",
    "pestphp/pest": "^2.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Fuse\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Fuse\\FuseServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
